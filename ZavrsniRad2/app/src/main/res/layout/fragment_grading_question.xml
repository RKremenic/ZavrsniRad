<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nyanza">

    <TextView
        android:id="@+id/tekst_pitanja1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Tekst pitanja"
        android:textAlignment="center"
        android:textColor="@color/rich_black"
        android:background="@color/yellow_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/trenutni_interval1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trenutni interval: 2d"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekst_pitanja1" />

    <TextView
        android:id="@+id/broj_tocnih1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broj tocnih odgovora: 4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trenutni_interval1" />

    <Button
        android:id="@+id/prikazi_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRIKAZI ODGOVOR"
        android:background="@color/purple_navy"
        android:textColor="@color/nyanza"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nyanza">


    <TextView
        android:id="@+id/tekst_pitanja3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Tekst pitanja"
        android:textAlignment="center"
        android:background="@color/yellow_green"
        android:textColor="@color/rich_black"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/trenutni_interval3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trenutni interval: 2d"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekst_pitanja3" />

    <TextView
        android:id="@+id/broj_tocnih3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broj tocnih odgovora: 4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trenutni_interval3" />

    <EditText
        android:id="@+id/upisi_odgovor"
        android:inputType="text"
        android:hint="UpiÅ¡ite odgovor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:background="@color/wild_blue"
        android:textColor="@color/rich_black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/broj_tocnih3" />

    <Button
        android:id="@+id/ne_znam_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Ne znam"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/purple_navy"
        android:textColor="@color/nyanza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/provjeri_btn"/>

    <Button
        android:id="@+id/provjeri_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Provjeri"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/purple_navy"
        android:textColor="@color/nyanza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ne_znam_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nyanza">

    <TextView
        android:id="@+id/tekst_pitanja2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Tekst pitanja"
        android:textAlignment="center"
        android:textColor="@color/rich_black"
        android:background="@color/yellow_green"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/tocan_odgovor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Tocan odgovor:"
        android:textColor="@color/rich_black"
        android:background="@color/wild_blue"
        app:layout_constraintTop_toBottomOf="@id/tekst_pitanja2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/tekst_odgovora2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Tekst odgovora"
        android:textAlignment="center"
        android:textColor="@color/rich_black"
        android:background="@color/wild_blue"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tocan_odgovor2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"
        />

    <Spinner
        android:id="@+id/ocjena_spinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:spinnerMode="dropdown"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/rich_black"
        app:layout_constraintTop_toBottomOf="@id/tekst_odgovora2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tekst_ocjene"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Potrebno odabrati ocjenu"
        android:textColor="@color/rich_black"
        android:background="@color/yellow_green"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ocjena_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/novi_interval2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Novi interval: /"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tekst_ocjene" />

    <TextView
        android:id="@+id/broj_tocnih2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broj točnih odgovora: /"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novi_interval2" />

    <Button
        android:id="@+id/nastavi_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nastavi"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:background="@color/purple_navy"
        android:textColor="@color/nyanza"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nyanza">

    <TextView
        android:id="@+id/sigurni_tekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sigurni ste da se Å¾elite odjaviti?"
        android:textColor="@color/rich_black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/odjavi_se_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odjavi se"
        android:textSize="20sp"
        android:background="@color/purple_navy"
        android:textColor="@color/nyanza"
        app:layout_constraintBottom_toTopOf="@+id/povratak_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sigurni_tekst"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/povratak_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Povratak"
        android:textSize="20sp"
        android:background="@color/purple_navy"
        android:textColor="@color/nyanza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/odjavi_se_btn"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>